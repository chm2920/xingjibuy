
	<div class="main_l">
		<div class="todaydeal">
			<div class="d_top"><img src="/images/g_bgdealht.png" width="700" height="8" /></div>
			<div class="d_main">
				<h1><span>银川</span>: <%= @deal.title %></h1>
				<div class="dealinfo clearfix">
					<div class="deal_l">
						<div class="buybox">
							<div class="buy clearfix">
								<div class="price" style="text-align:center;font-size:30px;">￥<%= @deal.price %></div>
								<a href="<%= buy_deal_path(@deal) %>"><div class="btn_buy"></div></a>
							</div>
							<div class="shuzi">
								<ul>
									<li>原价<br><h4 title="<%= @deal.i_price %>">￥<%= @deal.i_price %></h4></li>
									<li>折扣<br><h3><%= @deal.discount %>折</h3></li>
									<li class="red">节省<br><h3>￥<%= @deal.save_money %></h3></li>
								</ul>
							</div>
						</div>
						<div class="deal_samebox clearfix">
							<div class="title">
								距离本次团购结束还有：<br>
								<span id="time">2天1小时29分19秒</span>
							</div>
							<div class="box_r">
								<img src="/images/hourglass002.gif" width="29" height="50" />
							</div>
						</div>
						<div class="deal_samebox status">
							<h6>已经有<%= @deal.num_buyers %>人购买</h6>
							<div class="done">
								<img src="/images/deal-buy-succ.gif" align="absmiddle" width="27" height="28/"> 团购已成功，还可以继续购买...
							</div>
							<% if @deal.limit==1 %>
							<div style="padding:0px 10px;color:#ff3300">数量有限，再不抢就来不及啦！</div>
							<% end %>
							<div style="color:#666">8点58分达到最低团购人数：<%= @deal.low_ps %>人</div>
						</div>
					</div>
					<div class="deal_r">
						<div class="image">
							<a href="<%= deal_path(@deal) %>" target="_blank">
								<img src="<%= @deal.image %>" alt="<%= @deal.title %>">
							</a>
						</div>
						<div class="text"><%= @deal.ad_text %></div>
					</div>
				</div>
			</div>
			<div class="d_bottom">
			</div>
		</div>
		<div class="todayinfo">
			<div class="d_top">
				<img src="/images/bg_dlintop.png" width="690" height="8/">
			</div>
			<div class="d_main clearfix">
				<div class="info">
				
					<!-- Content Begin  --->
					
					<%= simple_format @deal.info %>
					<!-- Content End  --->
					
		  		</div>
				<div class="company">
					<h3><%= simple_format @deal.company %></h3>
					<div style="width:185px;margin-top:10px;">
						<%= simple_format @deal.com_info %>
					</div>
				</div>
			</div>
			<div class="d_bottom">
				<img src="/images/bg_dlinbom.png" width="690" height="8/">
			</div>
		</div>
	</div>
	<div class="main_r">
		<%= render "/partials/side" %>
	</div>